<%- include('partials/header.ejs') %>

  <%- include('partials/navbar.ejs') %>

    <div class="container">
      <hr />
      <h1>Perguntas</h1>
      <hr />
      <a href="/ask" class="btn btn-primary">Perguntar</a>

      <% questions.forEach(question=> { %>
        <div class="card my-5">
          <div class="card-body">
            <h3>
              <%= question.title %>
            </h3>
          </div>
          <div class="card-footer">
            <a href="/question/<%= question.id %>" class="btn btn-primary">Responder</a>
          </div>
        </div>
        <% }) %>
    </div>
    <%- include('partials/footer.ejs') %>